<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="songObject"
            type="lijewski.domain.entity.Song" />
    </data>

    <androidx.cardview.widget.CardView
        style="@style/ResultCardStyle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/song_title"
                style="@style/ResultCardTextStyle.Header"
                android:text="@{songObject.title}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_pic"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Enjoy the Silence" />

            <TextView
                android:id="@+id/song_artist"
                style="@style/ResultCardTextStyle"
                android:text="@{songObject.artist}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_pic"
                app:layout_constraintTop_toBottomOf="@id/song_title"
                tools:text="Depeche Mode" />

            <TextView
                android:id="@+id/song_year"
                style="@style/ResultCardTextStyle"
                android:text="@{songObject.year}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_pic"
                app:layout_constraintTop_toBottomOf="@id/song_artist"
                tools:text="1990" />

            <ImageView
                android:id="@+id/card_pic"
                android:layout_width="@dimen/card_artwork_width"
                android:layout_height="@dimen/card_artwork_height"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:loadImage="@{songObject.picUrl}"
                android:contentDescription="@string/card_pic_description" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
